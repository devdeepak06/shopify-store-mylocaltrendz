<div class="main_Container">
  <div>
    <h2>{{ section.settings.title }}</h2>
  </div>
  {% for block in section.blocks %}
    <div class="faqContainer">
      <div class="queContainer">
        <p class="queText1">{{ block.settings.question }}</p>
      </div>
      <div class="ansContainer">
        <p class="ansText2">{{ block.settings.answer }}</p>
      </div>
    </div>
  {% endfor %}
</div>
<style>
   .main_Container{
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      background-color: #fff;
      justify-content: center;
      width: 100%;
  }
  .faqContainer{
     display: flex;
      flex-direction: column;
      align-items: center;
      text-align: left;
      justify-content: center;
      /* width: 100%; */
  }
</style>
{% schema %}
{
  "name": "Custom FAQs Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title"
    }
  ],
  "blocks": [
  {
    "type": "text",
    "name": "FAQ",
    "settings": [
      {
        "type": "text",
        "id": "question",
        "label": "Question"
      },
      {
        "type": "text",
        "id": "answer",
        "label": "Answer"
      }
    ]
  }
],
  "presets": [
    {
      "name": "Custom FAQs Section"
    }
  ]
}
{% endschema %}
