<div class="mainContainer">
  {% for block in section.blocks %}
    <div class="badgeContainer">
      <div class="imageContainer">
        <img class="badgeImage" src="{{ block.settings.badgeSVG | image_url }}" height="" width="">
      </div>
      <p class="badgeText1">{{ block.settings.badgeText1 }}</p>
      <p class="badgeText2">{{ block.settings.badgeText2 }}</p>
    </div>
  {% endfor %}
</div>
<style>
    .mainContainer{
         display: flex;
      align-items: center;
      text-align: center;
      background-color: #1C1C1C;
      justify-content: space-evenly;
      padding: 2% 12%;
      width: 100%;
  }

    .imageContainer{
      border: 3px solid #C7A555;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 170px;
      width: 170px;
    }
    .badgeContainer{
          margin: 40px;
    }

    .imageContainer img{
      height: 63px;
      width: 63px;
    }
    .badgeText1{
      font-size: 24px;
      margin: 0;
      color: #FFFFFF;
      font-family: Open Sans;
      font-weight: 400;
    }
    .badgeText2{
      font-size: 16px;
      margin: 0;
      color: #FFFFFF;
      font-family: Open Sans;
      font-weight: 400;
    }
  @media screen and (max-width: 767px){
     .mainContainer{
      display: flex;
      justify-content: space-evenly;
      padding: 0 1%;
      width: 100%;
  }
    .badgeContainer{
    margin: 10px;
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
     .badgeText1{
      font-size: 14px;
    }
    .badgeText2{
      font-size: 10px;
    }
     .imageContainer{
      height: 93px;
      width: 93px;
    }
    .imageContainer img{
      height: 42px;
      width: 42px;
    }

  }
</style>
{% schema %}
{
  "name": "Custom Section",
  "settings": [
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Badges",
      "settings": [
        {
          "type": "image_picker",
          "id": "badgeSVG",
          "label": "Badge SVG"
        },
        {
          "type": "text",
          "id": "badgeText1",
          "label": "Badge Text 1"
        },
         {
          "type": "text",
          "id": "badgeText2",
          "label": "Badge Text 2"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Section"
    }
  ]
}
{% endschema %}
