  <script>
    document.addEventListener("DOMContentLoaded", function() {
      var dropdowns = document.querySelectorAll(".custom_article_dropdown");
      var images = document.querySelectorAll(".custom_article_dropdown img");
      var subnavs = document.querySelectorAll(".custom_article_subnav_cont");

      dropdowns.forEach(function(dropdown, index) {
        dropdown.addEventListener("click", function() {
          images[index].classList.toggle("custom_toggle_class");
          subnavs[index].classList.toggle("custom_article_view_subnav");
        });
      });

      var headers = document.querySelectorAll(".custom_arti_head, .custom_article_dropdown_img");
      headers.forEach(function(header) {
        header.addEventListener("click", function() {
          images.forEach(function(image) {
            image.classList.toggle("custom_toggle_class");
          });
          subnavs.forEach(function(subnav) {
            subnav.classList.toggle("custom_article_view_subnav");
          });
        });
      });
    });
  </script>

