<div class="o-container">
  <div class="c-filter">
    <div class="c-filter_title">
      <p class="c-heading -medium -noMargin">Filter Results</p>
    </div>
    <div class="c-filter_select c-form_select -min">
      <label class="u-screen-reader-text" for="c-post-category-select">Categories navigation</label>
      <select
        required=""
        name="category"
        id="c-post-category-select"
        class="c-form_select_input -gray"
      >
        <option value="/blogs/all-articles" selected="selected">All Categories</option>
        {% for block in section.blocks %}
          {%- case block.type -%}
            {%- when 'blog' -%}
              {% assign blog = block.settings.blog %}
              {% if blog.tags.size > 0 %}
                {% for tag in blog.all_tags %}
                  <option class="level-0" value="/blogs/all-articles">
                    {{ tag | link_to_tag: tag }}
                  </option>
                {% endfor %}
              {% endif %}
          {% endcase %}
        {% endfor %}
      </select>
    </div>

    <div class="c-filter_select c-form_select -min">
      <label class="u-screen-reader-text" for="c-post-category-select">Format navigation</label>
      <select
        required=""
        name="iti_post_format"
        id="c-post-format-select"
        class="c-form_select_input -gray"
      >
        <option value="/blogs/all-articles">All Formats</option>
        {% for block in section.blocks %}
          {%- case block.type -%}
            {%- when 'blog' -%}
              {% assign cstmBlog = block.settings.blog %}
              {% for cstmTitle in cstmBlog.title %}
                <option class="level-0" value="/blogs/all-articles">{{ cstmTitle }}</option>
              {% endfor %}
          {% endcase %}
        {% endfor %}
      </select>
    </div>
  </div>
</div>
