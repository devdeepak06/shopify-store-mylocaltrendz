{% assign linklist = linklists.brands %}
<ul class="block-grid mobile four-up product-collection">
  {% for link in linklist.links %}
    <li>
      <div class="product">
        {% assign link_item = link.object %}
        {% assign link_image = '' %}
        {% capture link_title %}{{ link.title | escape }}{% endcapture %}

        {% if link.type == 'collection_link' %}
          {% if link_item.image %}
            {% assign link_image = link_item.image.src | image_url: 'medium' %}
          {% else %}
            {% assign link_image = link_item.products.first.featured_image | image_url: 'medium' %}
          {% endif %}
        {% endif %}

        <a href="{{ link_item.url }}" title="{{ link_title }}">
          <span class="thumbnail">
            {% if link_image != '' %}
              <img
                {% if settings.align_height %}
                  style="max-height:{{ settings.collection_height }}px"
                {% endif %}
                src="{{ link_image }}"
                alt="{{ link_title }}"
                width=""
                height=""
              >
            {% endif %}
          </span>

          <span class="product-title">
            {{ link_title }}
          </span>
        </a>
      </div>
    </li>
  {% endfor %}
</ul>
